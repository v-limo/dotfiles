{
  // Editor Formatting
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.inlineSuggest.enabled": true,
  "editor.linkedEditing": true,
  "editor.wordWrap": "wordWrapColumn",

  // Editor Appearance
  "editor.accessibilitySupport": "off",
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "line",
  "editor.fontFamily": "JetBrains Mono, Fira Code",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.fontWeight": 300,
  "editor.glyphMargin": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.minimap.enabled": false,
  "editor.minimap.autohide": true,
  "editor.minimap.maxColumn": 50,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "mouseover",
  "editor.minimap.side": "right",
  "editor.minimap.size": "fill",
  "editor.mouseWheelZoom": true,
  "editor.overviewRulerBorder": false,
  "editor.renderLineHighlight": "none",
  "editor.renderWhitespace": "none",
  "editor.smoothScrolling": true,
  "editor.stickyScroll.enabled": true,

  // Emmet
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "postcss": "css"
  },
  "emmet.triggerExpansionOnTab": true,

  // Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 1,
  "explorer.sortOrder": "type",

  // File
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 2000,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,

  // Git
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "never",
  "git.path": "/usr/local/bin/git",

  // JavaScript and TypeScript
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",

  // Language settings
  "[css,csharp typescriptreact,javascriptreact, html, javascript, json, typescriptreact, md]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // Terminal
  "terminal.integrated.cwd": "${workspaceFolder}",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.letterSpacing": 0.5,
  "terminal.integrated.lineHeight": 1.2,

  // Workbench and UI
  "workbench.activityBar.location": "top",
  "workbench.colorCustomizations": {
    "tab.activeBorder": "#0000"
  },
  "workbench.colorTheme": "Monokai Vibrant",
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.showIcons": false,
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.preferredDarkColorTheme": "Monokai Vibrant",
  "workbench.settings.editor": "json",
  "workbench.sideBar.location": "right",
  "workbench.statusBar.visible": false,
  "window.commandCenter": false,
  "window.newWindowDimensions": "fullscreen",
  "window.restoreFullscreen": true,
  "window.titleBarStyle": "custom",
  "window.zoomLevel": 0.75,

  // GitHub PR
  "githubPullRequests.createOnPublishBranch": "never",
  "githubPullRequests.pullBranch": "never",

  // Live Server
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,

  // Rainbow Brackets
  "RainbowBrackets.depreciation-notice": false,

  //  Folding
  "editor.folding": true,

  // Neo vim
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "vscode-neovim.compositeKeys": {
    "jk": {
      "command": "vscode-neovim.escape"
    }
  }
}
